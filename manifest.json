{
  "name": "Tbbr",
  "description": "Make the most recently opened tab the first tab.",
  "version": "1.1",
  "manifest_version": 3,
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "mouse_tracker.js",
        "check_unsaved.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "commands",
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*",
    "https://*/*",
    "http://*/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://*/*",
      "http://*/*"
    ],
    "ids": [
      "*"
    ]
  },
  "commands": {
        "focus-tab-1": {
      "description": "Focus the first tab",
      "global": true
    },
    "focus-tab-2": {
      "description": "Focus the second tab",
      "global": true
    },
    "focus-tab-3": {
      "description": "Focus the third tab",
      "global": true
    },
    "focus-tab-4": {
      "description": "Focus the fourth tab",
      "global": true
    },
    "pick": {
      "description": "Select a tab by letter",
      "global": true
    },
    "move-to-first": {
      "description": "Move the current tab to the first position",
      "global": true
    },
    "toggle-pin": {
      "description": "Toggle pin state of the current tab",
      "global": true
    },
    "close-all-old-tabs": {
      "description": "Close all tabs that haven't been opened after a configurable time",
      "global": true
    },
    "clear-pick-mode": {
      "description": "Clear pick mode and restore tab titles",
      "global": true
    },
    "go-to-last-tab": {
      "description": "Go to the last used tab",
      "global": true
    },
    "cycle-through-tabs": {
      "description": "Cycle through previous tabs",
      "global": true
    },
    "close-pick": {
      "description": "Select a tab to close by letter",
      "global": true
    }
  }
}
